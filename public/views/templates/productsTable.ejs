<section class="p-5">
    <% if (items.length !== 0) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item => { %>
                    <tr>
                        <th scope="row"><%= item.id %></th>
                        <td><%= item.name %></td>
                        <td><%= item.price %></td>
                        <td>
                            <img 
                                src=<%= item.photo %>
                                item.name=<%= item.name %>
                                width="64" height="64"></img>
                        </td>
                    </tr>
                <% }); %> 
            </tbody>
        </table>
    <% }else{ %>
        <p class="bg-warning border border-warning rounded p-2" style="--bs-bg-opacity: .2;">
            No se encontraron items
        </p>
    <% } %>
</section>
