
if listExists()
    table(class="table")
        thead
            tr
                th(scope="col") #
                th(scope="col") Nombre
                th(scope="col") Precio
                th(scope="col") Imagen
        tbody
            each item in items
                tr
                    th(scope="row") #{item.id}
                    td #{item.name}
                    td #{item.price}
                    td
                        img(
                            src=item.photo
                            alt=item.name
                            width="64" height="64")
else
    p(
        class="bg-warning border border-warning rounded p-2"
        style="--bs-bg-opacity: .2;"
    ) No se encontraron items
